{
  "name": "@logrock/pebbles",
  "author": "lipe-dev",
  "files": [
    "dist"
  ],
  "main": "./dist/logrock-pebbles.umd.js",
  "module": "./dist/logrock-pebbles.es.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/logrock-pebbles.es.js",
      "require": "./dist/logrock-pebbles.umd.js"
    }
  },
  "version": "3.1.0",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "commit": "cz"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-syntax-jsx": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@fontsource/archivo": "^4.5.3",
    "@mdx-js/react": "^1.6.22",
    "@react-theming/storybook-addon": "^1.1.5",
    "@rollup/plugin-typescript": "^8.3.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react": "^1.0.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-preset-react-app": "^10.0.0",
    "commitizen": "^4.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-storybook": "^0.5.7",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": ">=10",
    "pinst": "^3.0.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "2.5.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rollup-plugin-typescript": "1.0.1",
    "semantic-release": "^18.0.1",
    "semantic-release-slack-bot": "^3.5.2",
    "storybook-addon-styled-component-theme": "^2.0.0",
    "styled-breakpoints": "^10.0.1",
    "styled-components": "^5.3.3",
    "stylelint": "^14.0.1",
    "stylelint-config-property-sort-order-smacss": "^8.0.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "packageManager": "yarn@3.1.1",
  "peerDependencies": {
    "@fontsource/archivo": "*",
    "react": "*",
    "react-dom": "*",
    "styled-breakpoints": "*",
    "styled-components": "*"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/mocks/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[jt]sx?$": "<rootDir>/jest/jest-preprocess.js",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMock.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-app"
        ]
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,js,jsx,ts,tsx}": "stylelint --fix",
    "*.{css,md,js,jsx,ts,tsx}": "prettier --write",
    "src/**/*.{js,jsx,ts,tsx}": "yarn jest --bail --findRelatedTests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LogRock/pebbles-react.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
