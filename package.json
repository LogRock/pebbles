{
  "name": "@logrock/pebbles",
  "files": [
    "dist"
  ],
  "main": "./dist/logrock-pebbles.umd.js",
  "module": "./dist/logrock-pebbles.es.js",
  "exports": {
    ".": {
      "import": "./dist/logrock-pebbles.es.js",
      "require": "./dist/logrock-pebbles.umd.js"
    }
  },
  "version": "1.1.2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@preact/preset-vite": "^2.1.7",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/preact": "^2.0.1",
    "@types/node": "^17.0.19",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-jest": "^27.3.1",
    "babel-plugin-transform-hook-names": "^1.0.2",
    "babel-plugin-transform-import-meta": "^2.1.1",
    "babel-preset-preact": "^2.0.0",
    "eslint": "^8.9.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-preact": "0.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": ">=10",
    "pinst": "^3.0.0",
    "preact": "^10.5.15",
    "prettier": "2.5.0",
    "semantic-release": "^18.0.1",
    "styled-breakpoints": "^10.0.1",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  },
  "peerDependencies": {
    "preact": "^10.5.15",
    "styled-breakpoints": "*",
    "styled-components": "*"
  },
  "packageManager": "yarn@3.2.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{css,md,js,jsx,ts,tsx}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LogRock/pebbles.git"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/lib"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/mocks/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "lib/**/*.{js,jsx,ts,tsx}",
      "!lib/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}",
      "<rootDir>/lib/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/lib/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[jt]sx?$": "<rootDir>/jest/jest-preprocess.js",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMock.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "preact"
        ]
      }
    }
  }
}
